<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MedicActivity"
    android:background="?attr/colorPrimaryVariant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false">

        <TextView
            android:id="@+id/greetTitleM"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:fontFamily="@font/assistant"
            android:text="Bem vindo(a) de volta"
            android:textSize="45sp"
            android:padding="10dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonPatientListM"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="?attr/colorSecondary"
            android:fontFamily="@font/roboto"
            android:padding="12dp"
            android:text="Lista de pacientes"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greetTitleM" />

        <Button
            android:id="@+id/buttonTaskListM"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="?attr/colorSecondary"
            android:fontFamily="@font/roboto"
            android:padding="12dp"
            android:text="Lista de tarefas"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonPatientListM" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="?attr/colorSecondary"
            android:fontFamily="@font/roboto"
            android:padding="12dp"
            android:text="@string/register"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonTaskListM" />

        <Button
            android:id="@+id/buttonExitSessionM"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:fontFamily="@font/roboto"
            android:padding="12dp"
            android:drawableTop="@drawable/ic_baseline_lock_24"
            android:text="Terminar\nSessÃ£o"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/buttonRegister" />

        <Button
            android:id="@+id/buttonExitAppM"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:fontFamily="@font/roboto"
            android:padding="12dp"
            android:drawableTop="@android:drawable/ic_lock_power_off"
            android:text="Fechar\nApp"
            android:textColor="?attr/colorSecondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/buttonRegister" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/medic_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>